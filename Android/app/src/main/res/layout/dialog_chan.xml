<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="@dimen/dp_20"
    android:background="@drawable/bg_rounded_channel"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_20"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_60"
                android:layout_height="fill_parent"
                android:gravity="center|right"
                android:singleLine="true"
                android:text="通道ID:"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/etchanid"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/selector_setting_et"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp_10"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_60"
                android:layout_height="fill_parent"
                android:ellipsize="marquee"
                android:gravity="center|right"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="通道名称:"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/etchanna"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/selector_setting_et"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp_10"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnca"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_rounded_channel_btn"
                android:gravity="center"
                android:text="取消"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                android:textStyle="normal" />

            <TextView
                android:layout_width="@dimen/dp_20"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/btnde"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_rounded_channel_btn"
                android:gravity="center"
                android:text="删除"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                android:textStyle="normal" />

            <TextView
                android:layout_width="@dimen/dp_20"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btnsu"
                android:layout_width="@dimen/dp_0"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_rounded_channel_btn_submit"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>